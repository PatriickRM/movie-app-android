<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🤖 Recomendaciones IA"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvRequestsRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requests: 1/1"
                    android:textSize="12sp"
                    android:textColor="@color/secondary"
                    android:background="@drawable/bg_icon_circle"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"/>

            </LinearLayout>

            <!-- Premium Banner (FREE users sin requests) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPremiumBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⭐ ¡Alcanzaste el límite diario!"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Actualiza a Premium para requests ilimitados de IA"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpgradePremium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Ver Premium"
                        android:textColor="@color/secondary"
                        app:backgroundTint="@color/black"
                        app:cornerRadius="8dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Prompt Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💬 ¿Qué te gustaría ver?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp"/>

                    <!-- Prompt Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/background_dark"
                        app:boxStrokeColor="@color/secondary"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPrompt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ej: Películas de acción con superhéroes"
                            android:textColor="@color/text_primary"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:maxLines="5"
                            android:gravity="top"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Include History Switch -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchIncludeHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Usar mi historial de favoritos/ratings"
                        android:textColor="@color/text_primary"
                        android:checked="true"
                        app:thumbTint="@color/white"
                        app:trackTint="@color/secondary"/>

                    <!-- Get Recommendations Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGetRecommendations"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:text="✨ Obtener Recomendaciones"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_star"
                        app:iconGravity="start"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Suggestions -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡 Sugerencias Rápidas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAction"
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎬 Acción"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/secondary"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipComedy"
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="😂 Comedia"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/secondary"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDrama"
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎭 Drama"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/secondary"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSciFi"
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🚀 Sci-Fi"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/secondary"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHorror"
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👻 Terror"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/secondary"/>

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="32dp"
                android:indeterminateTint="@color/primary"
                android:visibility="gone"/>

            <!-- Results Container -->
            <LinearLayout
                android:id="@+id/resultsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Explanation Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/background_card"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💭 Explicación de IA"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tvExplanation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="La IA está analizando tus preferencias..."
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingExtra="4dp"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Recommendations List -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="🎯 Películas Recomendadas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="12dp"
                    android:paddingBottom="80dp"/>

            </LinearLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/secondary"
                    android:alpha="0.4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Descubre con IA"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Dile a la IA qué tipo de películas\nte gustan y recibe recomendaciones personalizadas"
                    android:textSize="14sp"
                    android:textColor="@color/text_hint"
                    android:textAlignment="center"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>