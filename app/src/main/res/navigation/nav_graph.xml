<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.patrick.movieapp.presentation.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.patrick.movieapp.presentation.auth.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.patrick.movieapp.presentation.home.HomeFragment"
        android:label="Home">

        <action
            android:id="@+id/action_home_to_details"
            app:destination="@id/movieDetailsFragment"/>

        <action
            android:id="@+id/action_home_to_search"
            app:destination="@id/searchFragment"/>
    </fragment>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.patrick.movieapp.presentation.details.MovieDetailsFragment"
        android:label="Movie Details">

        <argument
            android:name="movieId"
            app:argType="integer"
            android:defaultValue="0"/>

        <action
            android:id="@+id/action_movieDetailsFragment_self"
            app:destination="@id/movieDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.patrick.movieapp.presentation.search.SearchFragment"
        android:label="Buscar">

        <action
            android:id="@+id/action_search_to_details"
            app:destination="@id/movieDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/aiRecommendationsFragment"
        android:name="com.patrick.movieapp.presentation.ai.AIRecommendationsFragment"
        android:label="AI Recommendations">

        <action
            android:id="@+id/action_ai_to_details"
            app:destination="@id/movieDetailsFragment"/>
    </fragment>


    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.patrick.movieapp.presentation.favorites.FavoritesFragment"
        android:label="Favoritos">

        <action
            android:id="@+id/action_favorites_to_details"
            app:destination="@id/movieDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/ratingsFragment"
        android:name="com.patrick.movieapp.presentation.ratings.RatingsFragment"
        android:label="Mis Calificaciones">

        <action
            android:id="@+id/action_ratings_to_details"
            app:destination="@id/movieDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/customListsFragment"
        android:name="com.patrick.movieapp.presentation.customlists.CustomListsFragment"
        android:label="Mis Listas">

        <action
            android:id="@+id/action_customLists_to_listDetails"
            app:destination="@id/listDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/listDetailsFragment"
        android:name="com.patrick.movieapp.presentation.customlists.ListDetailsFragment"
        android:label="Detalles de Lista">

        <argument
            android:name="listId"
            app:argType="long"
            android:defaultValue="0L"/>

        <action
            android:id="@+id/action_listDetails_to_movieDetails"
            app:destination="@id/movieDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.patrick.movieapp.presentation.profile.ProfileFragment"
        android:label="Perfil">

        <action
            android:id="@+id/action_profile_to_ratings"
            app:destination="@id/ratingsFragment"/>
    </fragment>

</navigation>